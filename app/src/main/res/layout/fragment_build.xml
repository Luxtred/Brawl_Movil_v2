<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_create_build"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/build_header_green"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:alpha="0.5">

                <ImageView
                    android:layout_width="70dp"  android:layout_height="70dp"
                    android:src="@drawable/g1"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:layout_width="65dp"  android:layout_height="65dp"
                    android:src="@drawable/ge1"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:layout_width="75dp"  android:layout_height="75dp"
                    android:src="@drawable/s1"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:layout_width="65dp"  android:layout_height="65dp"
                    android:src="@drawable/ge2"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:layout_width="70dp"  android:layout_height="70dp"
                    android:src="@drawable/h1"
                    android:layout_margin="4dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREAR BUILD"
                android:fontFamily="@font/lilitaone_regular"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:shadowColor="#000000"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_builds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_create_build" />

</androidx.constraintlayout.widget.ConstraintLayout>